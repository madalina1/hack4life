<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/self_testing_arms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".ui.selftesting.SelfTestingArmsFragment"
    android:paddingBottom="40dp"
    android:paddingTop="40dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">


    <Button
        android:id ="@+id/push_button_left"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Round Button"
        android:gravity="left"
        android:background="@drawable/button_bg_round"
        android:padding="15dp"
        />
    <Button
        android:id ="@+id/push_button_right"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Round Button"
        android:gravity="right"
        android:background="@drawable/button_bg_round"
        android:padding="15dp"
        />
    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Arms fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/selfArmsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="NEXT"
        android:onClick="goToSelfTestingSpeech"/>


</androidx.constraintlayout.widget.ConstraintLayout>
